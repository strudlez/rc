#!/bin/bash
# Shows your svn diff in vimdiff

set -e

function to_absolute() {
  if [[ "$1" = /* ]]; then
    echo $1
  else
    echo "$(pwd)/$1"
  fi
}

if [ $# -eq 0 ]; then
  ARG_FILES=`pwd`
else
  if [ "$1" == "--changelist" ]; then
    ARG_FILES="--changelist $2"
  else
    ARG_FILES="$(to_absolute $1)"
    shift
    for var in "$@"
    do
      ARG_FILES="$ARG_FILES\n$(to_absolute $var)"
    done
  fi
fi

function run_with_headers() {
  local files=$1
  local revision=$2
  local command=$3
  line="================================================================"

  echo "$FILES" | xargs -I{} bash -c "revision=$revision; revision=\${revision:-\$(svn info '{}' | grep Revision | awk '{print \$2}')}; revision=\${revision:-0}; echo -e \"$line\n{} - \$revision\n$line\" && $command"
}

SVN_STAT=$(echo -e $ARG_FILES | xargs svn status --ignore-externals)

FILES=$(echo -e "$SVN_STAT" | grep -P '^(A|M|D)' | cut -d' ' -f8-)

if [ "$FILES" == "" ];then
  exit 0
fi

vimdiff <(run_with_headers "$FILES" '' "svn cat -r\$revision '{}' 2> /dev/null") <(run_with_headers "$FILES" "CURRENT" "cat '{}'")
